@model IEnumerable<EmployeeManagement.Models.Department>

@{
    ViewData["Title"] = "Index";

}   

<p>
    <a asp-action="Create" class=" btn btn-primary"><i class="fa fa-plus"></i>Add New Record</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Department Records</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                Edit
            </th>
            <th>
                View
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Id)
                </td>
                
                <td>
                    <a asp-action="Edit" class=" btn btn-primary" asp-route-id="@item.DepartmentId"><i class="fa fa-edit"></i></a> 

                </td>
                <td>

                    <a asp-action="Details" class=" btn btn-success" asp-route-id="@item.DepartmentId"><i class="fa fa-eye"></i></a> 

                </td>
                <td>

                    <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.DepartmentId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
